{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",

    "ConnectionStrings": {
        "SqlServer": "Use-User-Secrets",
        "Redis": "Use-User-Secrets",
        "PostgreSql": "Use-User-Secrets"
    },

    "Jwt": {
        "Issuer": "go-electrify",
        "Audience": "go-electrify-client",
        "Secret": "Use-User-Secrets",
        "AccessSeconds": 0,
        "RefreshDays": 30
    },

    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            { "Name": "Console" }
        ]
    },

    "Email": {
        "Provider": "Resend",
        "From": "Go Electrify <no-reply@go-electrify.com>"
    },

    "Resend": {
        "ApiToken": "Use-User-Secrets"
    },

    "Ably": {
        "ApiKey": "Use-User-Secrets",
        "WebhookToken": "Use-User-Secrets"
    },

    "PayOS": {
        "ClientId": "Use-User-Secrets",
        "ApiKey": "Use-User-Secrets",
        "ChecksumKey": "Use-User-Secrets"
    },
    "DockAuth": {
        "Issuer": "go-electrify",
        "Audience": "go-electrify-dock",
        "SigningKey": "Use-User-Secrets"
    },
    "Authentication": {
        "Google": {
            "ClientId": "Use-User-Secrets",
            "ClientSecret": "Use-User-Secrets",
            "CallbackPath": "/signin-google"
        }
    },
    "Frontend": {
        "BaseUrl": "https://go-electrify.com"
    },
    "Auth": {
        "CookieDomain": ".go-electrify.com",
        "AccessTokenMinutes": 30,
        "RefreshTokenDays": 30,
        "DefaultFrontendRedirect": "https://go-electrify.com"
    },

    "Cors": {
        "AllowedOrigins": [ "https://go-electrify.com", "http://localhost:3000" ]
    }
}