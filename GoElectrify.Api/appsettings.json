{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "SqlServer": "Use-User-Secrets",
        "Redis": "Use-User-Secrets",
        "PostgreSql": "Use-User-Secrets",
    },
    "Jwt": {
        "Issuer": "go-electrify",
        "Audience": "go-electrify-client",
        "Secret": "Use-User-Secrets",
        "AccessMinutes": 30,
        "RefreshDays": 30
    },
    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            { "Name": "Console" }
        ]
    },
    "Email": {
        "Provider": "Resend", // Dev: Console | Prod: Resend
        "From": "Go Electrify <no-reply@go-electrify.com>"
    },
    "Resend": {
        "ApiToken": "Use-User-Secrets" // Nếu bạn muốn dùng appsettings thay vì env var
    }
}
